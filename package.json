{
  "private": true,
  "scripts": {
    "start": "concurrently \"nodemon\" \"cd dist && python -m http.server\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tassaron/tassaron-dot-com.git"
  },
  "author": "tassaron",
  "homepage": "https://tassaron.com",
